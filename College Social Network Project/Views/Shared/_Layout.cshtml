<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-3.4.1.min.js" type="text/javascript"></script>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/all.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />

    
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("College Social Network", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Dashboard", "Index", "Dashboard")</li>
                  
                    }
                    @if (User.IsInRole("Student"))
                    {
                        <li>@Html.ActionLink("Dashboard", "Index", "StudentsWorld")</li>

                    }
                    @if (User.IsInRole("Instructor"))
                    {
                        <li>@Html.ActionLink("Dashboard", "Index", "InstructorWorld")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        


          
        @*<footer id="endpage">
            <p>&copy; @DateTime.Now.Year - College Social Network</p>
        </footer>*@

    </div>
    @*Scripts.Render("~/bundles/signalR")
    @Scripts.Render("~/bundles/hubs")*@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

     <!-- SignalR -->
    <script src="~/Scripts/jquery.signalR-2.4.3.js"></script>
    <script src="~/signalr/hubs"></script>
   
    @RenderSection("scripts", required: false)
</body>
</html>
