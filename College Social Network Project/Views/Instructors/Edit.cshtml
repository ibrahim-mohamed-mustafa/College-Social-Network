@model College_Social_Network_Project.Models.Instructor

@{
    ViewBag.Title = "Edit";
}
<link href="~/Content/StyleSheet2.css" rel="stylesheet" />
<h1>Edit</h1>
<h3 id="Duser">Instructor :  @Html.DisplayFor(model => model.Iemail) </h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Iid)

        <div class="form-group">
            @Html.LabelFor(model => model.Iemail, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Iemail, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.Iemail, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Iaddress, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Iaddress, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Iaddress, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Igender, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Igender, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Igender, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            @Html.LabelFor(model => model.Iofficehours, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Iofficehours, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Iofficehours, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form">
            <section class="loginForm">

                <div class="form-group">
                    <div class="col-md-offset-4 col-md-3">
                        <input type="submit" value="Save" class="button-55"  id="save" />
                        <br /><br />
                    </div>

                    <div class="col-md-offset-4 col-md-5">
                        @Html.ActionLink("Cancel", "Index", null, new { @class = "button-55" })
                        <br /><br />
                    </div>
                </div>

            </section>
        </div>
    </div>
}






@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
