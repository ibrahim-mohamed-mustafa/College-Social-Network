@model College_Social_Network_Project.Models.tbl_categroy
@*@model IEnumerable<College_Social_Network_Project.Models.tbl_categroy>*@
@{
    ViewBag.Title = "Addcategory";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<h2 id="Duser">Add Quiz Room</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.cat_name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.cat_name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.cat_name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cat_time, htmlAttributes: new { @class = "control-label col-md-2" })
            <h4 id="min">(in Mintues)</h4>
            <div class="col-md-10">
                @Html.EditorFor(model => model.cat_time, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.cat_time, "", new { @class = "text-danger" })
            </div>

        </div>

        <section class="loginForm">

            <div class="form-group">
                <div class="col-md-offset-5 col-md-3">
                    <input type="submit" value="Create" class="button-55" id="createcat" />

                </div>
            </div>

        </section>

    </div>
}


<div>
    <table id="users">
        <thead>
            <tr>

                <th>Rome Name</th>
                <th>Room Code</th>
                <th>View All Questions</th>
                <th>Exam Time</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @*@foreach (var item in Model)*@
            @foreach (var item in ViewData["list"] as List<College_Social_Network_Project.Models.tbl_categroy>)
            {
                <tr>

                    <td>@item.cat_name</td>
                    <td>@item.cat_encyptedstring</td>
                    <td><a class="button-55" id="indexupload" href="@Url.Action("ViewAllQuestions" , new { Cat_id = item.cat_id})">View Questions of this Gategory</a></td>
                    <td>@item.cat_time Minutes</td>
                    <td id="indextdq">
                        <a class="button-55" id="indexedit" href="@Url.Action("Edit_Cat" ,new { id = item.cat_id })">Edit </a>
                        <a class="button-55" id="indexdelete" href="@Url.Action("Delete_Cat" ,new { id = item.cat_id })">Delete </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
