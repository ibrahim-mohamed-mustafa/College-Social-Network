@model College_Social_Network_Project.Models.Dquestion

@{
    ViewBag.Title = "CreateQuestion";
   
}
<link href="~/Content/StyleSheet2.css" rel="stylesheet" />

<h2 id="dquestion">Write Question</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
            @Html.TextAreaFor(model => model.Dquestion_content, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Dquestion_content, "", new { @class = "text-danger" })
    </div>

    <div class="form-group" id="hide">
        @Html.LabelFor(model => model.Dquestion_DateTime, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Dquestion_DateTime, new { htmlAttributes = new { @class = "form-control", @Value = @TempData["datetimeQuestion"], @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.Dquestion_DateTime, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" id="hide">
        @Html.LabelFor(model => model.Dquestion_FK_User, "Dquestion_FK_User", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Dquestion_FK_User, new { htmlAttributes= new { @class = "form-control", @Value = @TempData["userIdQuestion"], @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.Dquestion_FK_User, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form">
        <section class="loginForm">

            <div class="form-group">
                <div class="col-md-offset-4 col-md-3">
                    <input type="submit" value="Add" class="button-55" id="save" />
                    <br /><br />
                </div>

                <div class="col-md-offset-4 col-md-5">
                    @Html.ActionLink("Cancel", "Index", null, new { @class = "button-55" })
                    <br /><br />
                </div>
            </div>

        </section>
    </div>
   
</div>
}
